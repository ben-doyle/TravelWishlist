{{#partial "content"}}
    {{#if username }}
        <h1>Welcome {{ username }}!</h1>

        <p>View <a href="/locations">View all suggested travel locations</a></p>
    {{ else }}
        <h1>Travel destination Voting</h1>
        <form action="/sign-in" method="post">

            <input type="text" placeholder="What's your username?" name="username">
            <button>Sign in</button>
        </form>
    {{/if}}
{{/partial}}

{{> base.hbs}}