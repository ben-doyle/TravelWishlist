{{#partial "content"}}
    <div id="map"></div>
    <script>
        var map;
        function initMap() {
            var myLatLng = {lat: {{  locationIdea.lattitude  }}, lng: {{  locationIdea.longitude }} };

            map = new google.maps.Map(document.getElementById('map'), {
                center: myLatLng,
                zoom: 5
            });

            var marker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                title: ' {{ locationIdea.name }} '
            });
        }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDNb9_4ZFwEFfovzr899TZXB16BtPS_xyo&callback=initMap" async defer></script>
    <h1>{{ locationIdea.name }}</h1>
    <p><em>{{ locationIdea.description }}</em></p>
    <h2>{{ locationIdea.voteCount }} Vote</h2>
    <ul>
        {{#each locationIdea.voters}}
            <li>{{ this }}</li>
        {{/each}}
    </ul>
    <form action="/location/{{ locationIdea.slug }}/vote" method="post">
        <button>Vote!</button>
    </form>

{{/partial}}

{{#partial "name"}}
    {{ locationIdea.name }}
{{/partial}}

