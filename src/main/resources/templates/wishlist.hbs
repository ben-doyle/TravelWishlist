{{#partial "content"}}
    <h1> My Travel Wish List:</h1>
    <ul>
        {{#each locations}}
            <li>
                <form action="/location/{{ slug }}/vote" method="post">
                    <a href="/location/{{ slug }}"> {{ name }}</a> ( {{ voteCount }} votes)<button>Vote</button>
                </form>
            </li>
        {{/each}}
    </ul>

    <form action="/wishlist" method="post">
        <input type="text" placeholder="Location?" name="name">
        <input type="text" placeholder="Description?" name="description">
        <button>Suggest!</button>
    </form>
{{/partial}}

{{> base.hbs}}